<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <!-- Background Color -->
        <item name="android:background">@color/yellow_500</item>
    </style>

    <!-- Custom Style -->
    <style name="TextAppearance.Diary.Base" parent="TextAppearance.AppCompat">
           <item name="fontFamily">@font/ulziro</item>
    </style>

    <style name="TextAppearance.Diary.Title1" parent="TextAppearance.Diary.Base">
            <item name="android:textSize">@dimen/button_text1</item>
    </style>

    <style name="TextAppearance.Diary.Body1" parent="TextAppearance.Diary.Base">
            <item name="android:textSize">@dimen/no_result_text</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Diary.Body2" parent="TextAppearance.Diary.Base">
        <item name="android:textSize">@dimen/viewholder_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>