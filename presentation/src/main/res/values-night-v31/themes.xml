<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Diary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <!-- Background Color -->
        <item name="android:background">@color/yellow_500</item>

        <!-- Customize SplashScreen here. -->
        <item name="android:windowSplashScreenBackground">@color/yellow_500</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
    </style>

    <!-- Custom Style -->
    <style name="TextAppearance.Diary.Base.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/ulziro</item>
    </style>

    <style name="TextAppearance.Diary.Title1" parent="TextAppearance.Diary.Base.Title">
        <item name="android:textSize">@dimen/button_text1</item>
    </style>

</resources>